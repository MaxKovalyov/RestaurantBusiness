@model OrderTable
<section id="form-table">
    <div class="container">
        <form asp-action="Index" method="post" class="form-table">
            <h3>Заполните форму</h3>
            <div class="row-form">
                <div class="col-md-12">
                    <select class="input-select" asp-for="RestaurantId" asp-items="ViewBag.Restaurants" id="restaurant">
                        <option disabled selected>Выберите ресторан</option>
                    </select>
                    <span asp-validation-for="RestaurantId" class="error"></span>
                </div>
                <div class="col-md-6">
                    <input required placeholder="ФИО" type="text" class="input-text" asp-for="ClientName">
                    <span asp-validation-for="ClientName" class="error"></span>
                </div>
                <div class="col-md-6">
                    <input required placeholder="Телефон" type="text" class="input-text" asp-for="ClientPhone">
                    <span asp-validation-for="ClientPhone" class="error"></span>
                </div>
                <div class="col-md-6">
                    <input required placeholder="Количество гостей" type="text" class="input-text" asp-for="CountGuest">
                    <span asp-validation-for="CountGuest" class="error"></span>
                </div>
                <div class="col-md-6">
                    <input required placeholder="Желаемая дата" type="date" class="input-text" asp-for="Date">
                    <span asp-validation-for="Date" class="error"></span>
                </div>
                <div class="col-md-12">
                    <textarea placeholder="Точное время и подробности о заказе" asp-for="Description" cols="40" rows="5" class="input-textarea"></textarea>
                </div>
                <input id="id" type="hidden" asp-for="Id" value="11111111-1111-1111-1111-111111111111">
                <div class="col-12 text-center terms-container">
                    <input id="terms" type="checkbox" required>
                    <label for="terms"> Я согласен с условиями <a class="terms" href="https://www.law.ru/article/23093-politika-konfidentsialnosti-dlya-sayta">политики конфиденциальности</a></label>
                </div>
                <div class="col-12 text-center">
                    <button class="button" type="submit" name="submit">Отправить</button>
                </div>
            </div>
        </form>
    </div>
</section>
