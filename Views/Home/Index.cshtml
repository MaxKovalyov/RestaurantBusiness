@model HomeViewModel
<section id="about">
    <div class="container">
        <div class="row text-center">
            <h2>О сети ресторанов</h2>
        </div>
        <div class="justify-content">
            <h4>О сети</h4>
            <p>Наша сеть – сеть ресторанов смешанной кухни. Та самая сеть, с безупречной кухней, знаменитым гостеприимством и высочайшим уровнем сервиса. Именно здесь вы найдёте самую зелёную террасу летом и почти сказочный лес зимой.</p>
            <p>Наша сеть – место для ценителей прекрасного. А прекрасное – это баланс лучшей в мире кухни, окружающей обстановки, где нет места мелочам, и атмосферы, которую мы тщательно продумываем.</p>
            <p>Мы с любовью и заботой подбираем для вас не только блюда меню. Наши джазовые вечера с участием приглашённых звёзд мирового уровня пользуются особым успехом у самых взыскательных ценителей этого музыкального направления.</p>
            <p>Специально для камерных ужинов в узком кругу в ресторане предусмотрены отдельные помещения с VIP обслуживанием, оборудованные по типу люксовых номеров в отеле. Что бы вы не выбрали – семейный бранч, детский праздник, свидание, деловой обед или праздничное мероприятие в кругу многочисленных друзей - у нас вы прекрасно проведете время.</p>
        </div>
    </div>
</section>
<section id="slideshow">
    <div class="container">
        <div class="row text-center">
            <h2>Галерея</h2>
        </div>
        <div class="slideshow-container">
            <img src="../images/Restaurants/img1.jpg" data-slideshow="
                 @foreach(var item in Model.Restaurants)
                  {
                     @string.Concat(item.Image, "|");
                  }
                 @*../images/Restaurants/img2.jpg|../images/Restaurants/img3.jpg|../images/Restaurants/img4.jpg|../images/Restaurants/img5.jpg|../images/Restaurants/img6.jpg|../images/Restaurants/img8.jpg*@
                 ">
        </div>
    </div>
</section>
<section id="news">
    <div class="container">
        <div class="row text-center">
            <h2>Новости</h2>
        </div>
        <div class="items text-center">
            @foreach (var item in Model.News)
            {
                <div class="one-item col-3">
                    <a href="">
                        <div class="item">
                            <h3>@item.Description</h3>
                            <p>Дата публикации: @item.Date</p>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<section class="paginator">
    <div class="container">
        <div class="text-center">
            @if (Model.PageModel.PageNumber == 1)
            {
                if (Model.PageModel.TotalPages > 2)
                {
                    <a class="active">1</a>
                    <a asp-action="Index" asp-route-page="2">2</a>
                    <span>...</span>
                    <a asp-action="Index" asp-route-page="@Model.PageModel.TotalPages">@Model.PageModel.TotalPages</a>
                }
                else
                {
                    if (Model.PageModel.TotalPages == 2)
                    {
                        <a class="active">1</a>
                        <a asp-action="Index" asp-route-page="2">2</a>
                    }
                    else
                    {
                        if (Model.PageModel.TotalPages == 1)
                        {
                            <a class="active">1</a>
                        }
                    }
                }
            }
            else
            {
                if (Model.PageModel.PageNumber == 2)
                {
                    if (Model.PageModel.TotalPages > 3)
                    {
                        <a asp-action="Index" asp-route-page="1">1</a>
                        <a class="active">2</a>
                        <a asp-action="Index" asp-route-page="3">3</a>
                        <span>...</span>
                        <a asp-action="Index" asp-route-page="@Model.PageModel.TotalPages">@Model.PageModel.TotalPages</a>
                    }
                    else
                    {
                        if (Model.PageModel.TotalPages == 3)
                        {
                            <a asp-action="Index" asp-route-page="1">1</a>
                            <a class="active">2</a>
                            <a asp-action="Index" asp-route-page="3">3</a>
                        }
                        else
                        {
                            if (Model.PageModel.TotalPages == 2)
                            {
                                <a asp-action="Index" asp-route-page="1">1</a>
                                <a class="active">2</a>
                            }
                        }
                    }
                }
                else
                {
                    if (Model.PageModel.PageNumber == Model.PageModel.TotalPages - 1)
                    {
                        <a asp-action="Index" asp-route-page="1">1</a>
                        <span>...</span>
                        <a asp-action="Index" asp-route-page="@(Model.PageModel.PageNumber-1)">@(Model.PageModel.PageNumber-1)</a>
                        <a asp-action="Index" asp-route-page="@Model.PageModel.PageNumber">@Model.PageModel.PageNumber</a>
                        <a asp-action="Index" asp-route-page="@Model.PageModel.TotalPages">@Model.PageModel.TotalPages</a>
                    }
                    else
                    {
                        if (Model.PageModel.PageNumber == Model.PageModel.TotalPages)
                        {
                            <a asp-action="Index" asp-route-page="1">1</a>
                            <span>...</span>
                            <a asp-action="Index" asp-route-page="@(Model.PageModel.PageNumber-1)">@(Model.PageModel.PageNumber-1)</a>
                            <a asp-action="Index" asp-route-page="@Model.PageModel.PageNumber">@Model.PageModel.PageNumber</a>
                        }
                        else
                        {
                            <a asp-action="Index" asp-route-page="1">1</a>
                            <span>...</span>
                            <a asp-action="Index" asp-route-page="@(Model.PageModel.PageNumber-1)">@(Model.PageModel.PageNumber-1)</a>
                            <a asp-action="Index" asp-route-page="@Model.PageModel.PageNumber">@Model.PageModel.PageNumber</a>
                            <a asp-action="Index" asp-route-page="@(Model.PageModel.PageNumber+1)">@(Model.PageModel.PageNumber+1)</a>
                            <span>...</span>
                            <a asp-action="Index" asp-route-page="@Model.PageModel.PageNumber">@Model.PageModel.PageNumber</a>
                        }
                    }
                }
            }
        </div>
    </div>
</section>
