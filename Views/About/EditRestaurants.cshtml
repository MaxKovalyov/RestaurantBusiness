<div class="container">
    <form action="" method="POST" id="form" enctype="multipart/form-data">
        <div class="row">
            <h3>Добавление/редактирование ресторана</h3>
        </div>
        <div class="row">
            <div class="col-2">
                <label for="name">Название ресторана</label>
            </div>
            <div class="col-6">
                <input required id="name" type="text" name="name">
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label for="img">Фотография ресторана</label>
            </div>
            <div class="col-6">
                <input required id="img" type="file" name="img" accept="image/*">
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label for="address">Адрес расположения</label>
            </div>
            <div class="col-6">
                <input required id="address" type="text" name="address">
            </div>
        </div>
        <div class="row">
            <button type="submit" class="">Отправить</button>
        </div>
    </form>
</div>
