@model MenuViewModel
<section id="slideshow-min">
    <div class="container">
        <div class="row text-center">
            <h2>Галерея</h2>
        </div>
        <div class="slideshow-container-min">
            @foreach (var category in Model.Categories)
            {
                <img src="@Model.Products.Where(p => p.CategoryId == category.Id).FirstOrDefault().Image" data-slideshow="
                    @foreach(var product in Model.Products.Where(p => p.CategoryId == category.Id))
                     {
                        if(product == Model.Products[0])
                        {
                            @product.Image;
                        } 
                        else
                        {
                            @string.Concat("|", product.Image);
                        }
                     }
                     ">
            }
        </div>
    </div>
</section>
<section id="menu">
    <div class="container">
        @foreach (var category in Model.Categories)
        {
            <div class="row text-center">
                <h2>@category.CategoryName</h2>
            </div>
            <div class="products-grid">
                @foreach (var product in Model.Products.Where(p => p.CategoryId == category.Id))
                {
                    <div class="product">
                        <div class="product-img">
                            <img src="@product.Image" alt="@product.Title">
                        </div>
                        <div class="product-title">
                            <span class="title">@product.Title</span>
                        </div>
                        <div class="product-cost">
                            <span class="cost">@product.Cost ₽</span>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
