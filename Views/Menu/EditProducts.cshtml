<div class="container">
    <form action="" method="POST" id="form" enctype="multipart/form-data">
        <div class="row">
            <h3>Добавление/редактирование блюда</h3>
        </div>
        <div class="row">
            <div class="col-2">
                <label for="name">Название блюда</label>
            </div>
            <div class="col-6">
                <input required id="name" type="text" name="name">
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label for="img">Фотография блюда</label>
            </div>
            <div class="col-6">
                <input required id="img" type="file" name="img" accept="image/*">
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label for="cost">Стоимость блюда</label>
            </div>
            <div class="col-6">
                <input required id="cost" type="text" name="cost">
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label for="cost">Категория блюда</label>
            </div>
            <div class="col-6">
                <select class="input-select" name="category" id="category">
                    <option disabled selected>Выберите категорию</option>
                    <option value="Первое блюдо">Первое блюдо</option>
                    <option value="Второе блюдо">Второе блюдо</option>
                    <option value="Закуски">Закуски</option>
                    <option value="Напитки">Напитки</option>
                    <option value="Десерты">Десерты</option>
                </select>
            </div>
        </div>
        <div class="row">
            <button type="submit" class="">Отправить</button>
        </div>
    </form>
</div>
