<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/jquery.hammer-full.min.js"></script>
    <script src="~/lib/jQuery-slideshow-plugin/plugin.js"></script>
    <link rel="stylesheet" type="text/css" href="~/lib/jQuery-slideshow-plugin/plugin.css">
    <script src="~/js/main.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <div class="nav-container">
            <nav>
                <a class="nav-item" href="/Home/Index">Главная</a>
                <div class="dropdown" id="dropdown">
                    <a class="dropdown-link nav-item" id="dropd">О нас</a>
                    <ul class="dropdown-menu" id="myDropdown">
                        <li>
                            <a class="dropdown-submenu nav-item" href="/About/Restaurants">Рестораны</a>
                        </li>
                        <li>
                            <a class="dropdown-submenu nav-item" href="/About/Service">Обслуживание</a>
                        </li>
                        <li>
                            <a class="dropdown-submenu nav-item" href="/About/Contact">Контакты</a>
                        </li>
                        <li>
                            <a class="dropdown-submenu nav-item" href="/About/Awards">Награды</a>
                        </li>
                        <li>
                            <a class="dropdown-submenu nav-item" href="/About/Staff">Персонал</a>
                        </li>
                        <li>
                            <a class="dropdown-submenu nav-item" href="/About/Reviews">Отзывы</a>
                        </li>
                    </ul>
                </div>
                <a class="nav-item" href="/Menu/Index">Меню</a>
                <a class="nav-item" href="/OrderTable/Index">Столик</a>
                <a class="nav-item" href="/OrderEvent/Index">Мероприятие</a>
                <a class="nav-item" href="/Map/Index">Схема проезда</a>
                <a class="nav-item" href="/Sitemap/Index">Карта сайта</a>
            </nav>
        </div>
    </header>
    <section class="page-head" data-overlay>
        <div class="container">
            <div class="row text-center text-title">
                <h2>@ViewBag.Title</h2>
            </div>
        </div>
    </section>
    @RenderBody()
    <footer>
        <div class="footer">
            <div class="footer-links">
                <h3>О нас:</h3>
                <ul>
                    <li>
                        <a href="/About/Restaurants">Рестораны</a>
                    </li>
                    <li>
                        <a href="/About/Service">Обслуживание</a>
                    </li>
                    <li>
                        <a href="/About/Contact">Контакты</a>
                    </li>
                    <li>
                        <a href="/About/Awards">Награды</a>
                    </li>
                    <li>
                        <a href="/About/Staff">Персонал</a>
                    </li>
                    <li>
                        <a href="/About/Reviews">Отзывы</a>
                    </li>
                </ul>
            </div>
            <div class="footer-socials">
                <div class="social twitter">
                    <a href="https://twitter.com/" target="_blank"><i class="fa fa-twitter fa-2x"></i></a>
                </div>
                <div class="social github">
                    <a href="https://github.com/" target="_blank"><i class="fa fa-github fa-2x"></i></a>
                </div>
                <div class="social instagram">
                    <a href="https://www.instagram.com/" target="_blank"><i class="fa fa-instagram fa-2x"></i></a>
                </div>
                <div class="social facebook">
                    <a href="https://ru-ru.facebook.com/" target="_blank"><i class="fa fa-facebook fa-2x"></i></a>
                </div>
                <div class="social vk">
                    <a href="https://vk.com/" target="_blank"><i class="fa fa-vk fa-2x"></i></a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>